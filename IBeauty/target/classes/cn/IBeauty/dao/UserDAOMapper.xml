<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="cn.IBeauty.dao.UserDAO">
    <!--id应该是接口中的方法，结果类型如没有配置别名则应该使用全名称 -->
    <!--获得图书对象通过编号 -->
    <select id="findUserByEmail" resultType="cn.IBeauty.po.User">
        select id,email,nickname,pwd,user_integral,is_email_verify,email_verify_code,last_login_time,last_login_ip,user_pic from user where email=#{email}
    </select>
    <select id="findUserByName" resultType="cn.IBeauty.po.User">
        select * from user where nickname=#{nickname}
    </select>
    <!-- 增加 -->
    <insert id="insertNew">
        insert into user(email,nickname,pwd) values(#{email},#{nickname},#{pwd})
    </insert>
    <!-- 删除 -->
     <delete id="delete" parameterType="int">
        delete from user where id=#{id}
    </delete>
    <!-- 更新 -->
    <update id="update">
        update book set title=#{title},price=#{price},publishDate=#{publishDate}
        where id=#{id}
    </update>
     <select id="findUser" resultType="cn.IBeauty.po.User">
        select * from user
      </select>
      <select id="findById"  resultType="cn.IBeauty.po.User">
    	select * from user where id=#{id}    
    </select>
</mapper>